<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Here"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/accent"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:text="Please enter your details."
            android:textColor="@color/translucent_white"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_green_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/dark_green"
                android:src="@drawable/ic_account_circle" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/translucent_white"
                android:gravity="center"
                android:hint="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/translucent_white"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_green_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/dark_green"
            android:src="@drawable/ic_baseline_email_24" />

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/translucent_white"
            android:gravity="center"
            android:hint="Email (Optional)"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHighlight="@color/orange"
            android:textColorHint="@color/translucent_white"
            android:textStyle="normal" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_green_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/dark_green"
                android:src="@drawable/ic_baseline_local_phone_24" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/translucent_white"
                android:gravity="center"
                android:hint="Phone Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:inputType="phone"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/translucent_white"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_green_border"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/dark_green"
                android:src="@drawable/ic_baseline_lock_open_24" />

            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/translucent_white"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textVisiblePassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textColorHighlight="@color/orange"
                android:textColorHint="@color/translucent_white"
                android:textStyle="normal" />
        </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/regSubmit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/dark_green_button"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/light_orange"
        android:textSize="14sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>